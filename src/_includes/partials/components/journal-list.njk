{% if journalListItems.length %}
<section class="[ post-list ] [ pad-top-700 pad-bottom-700 md:pad-top-600 md:pad-bottom-max ]">
	<div class="[ wrapper ] [ sf-flow ]">
		<h2 class="[ post-list__heading ] [ text-700 md:text-900 ]">{{ journalListHeading }}</h2>
		<p class="section-intro">{{ journalListSummary }}</p>
		<ol class="[ post-list__items ] [ sf-flow ] [ pad-top-500 ]" reversed>
		{% for item in journalListItems %}
		<li class="post-list__item">
			<h3 class="[ leading-tight text-600 md:text-700 ]">
				<a href="{{ item.url }}" class="post-list__link link-hover" rel="bookmark">{{ item.data.title }}</a>
			</h3>
			<p class="gap-top-300">
				<time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
			</p>
		</li>
	{% endfor %}
	</ol>

	{% if page.url == '/' %}
		<a href="/journal" class="[ post-list__archive ] [ text-500 ]">See all journal items</a>
	{% endif %}
	</div>
</section>
{% endif %}
