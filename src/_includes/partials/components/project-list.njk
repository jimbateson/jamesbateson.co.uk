{% if projectListItems.length %}
  <section class="[ post-list ] [ pad-top-700 pad-bottom-700 md:pad-top-600 md:pad-bottom-max ]">
    <div class="[ wrapper ] [ sf-flow ]">
      {% if page.url == '/' %}
        <h2 class="[ post-list__heading ] [ text-700 md:text-900 ]">Featured Projects</h2>
        <p class="section-intro">All source code can be viewed on my <a href="https://github.com/jimbateson">Github</a>.</p>
      {% endif %}
      <ol class="[ post-list__items project-list__items ] [ pad-top-500 ]">
        {% for item in projectListItems %}
        <li class="[ post-list__item project-list__item ] [ sf-flow ]">
			<div>
				<h3 class="[ leading-tight text-700 ]">{{ item.data.title }}</h3>

				<ul class="[ post-list__item-links ]">
					<li><a href="{{ item.url }}">Write-up <span class="visually-hidden">for {{ item.data.title }}</span></a></li>
					{% if item.data.url %}<li><a href="{{ item.data.url }}" target="_blank" rel="external noreferrer"><span class="visually-hidden">visit {{ item.data.title }}</span> Site</a></li>{% endif %}
				</ul>
			</div>

			<p class="[ leading-tight text-500 ]">{{ item.data.shortDescription | safe }}</p>
          </li>
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
