<header class="[ intro ] [ pad-top-max pad-bottom-max ]">
  <div class="wrapper [ sf-flow ]">
    <h1 class="[ intro__heading ] [ text-800 md:text-max leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-tight ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>
