{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ bannerSummary | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = postsHeading %}
{% set postListItems = collections.postFeed %}

{# Post list content #}
{% set peopleListItems = collections.people %}

{# Project list content #}
{% set projectListItems = collections.projects %}

{# Archive link #}
{% if postListItems.length < collections.posts.length %}
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = '/articles' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    {% include "partials/components/article-list.njk" %}
    {% include "partials/components/people-list.njk" %}
    {% include "partials/components/project-list.njk" %}
  </main>
{% endblock %}
