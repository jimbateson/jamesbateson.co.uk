{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
	{{ bannerSummary | safe }}
{% endset %}
{% set introImage = bannerImage %}

{# Post list content #}
{% set walkListHeading = walkListHeading %}
{% set walkListSummary = walkListSummary %}
{% set walkListItems = collections.walksFeed %}

{% set walkPlannedHeading = walkPlannedHeading %}
{% set walkPlannedSummary = walkPlannedSummary %}
{% set walkPlannedItems = collections.walksPlannedFeed %}

{# Archive link #}
{% if walkListItems.length < collections.walks.length %}
	{% set paginationNextText = archiveButtonText %}
	{% set paginationNextUrl = '/walks' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    {% include "partials/components/walks-list.njk" %}
    {% include "partials/components/walks-planned.njk" %}
  </main>
{% endblock %}
